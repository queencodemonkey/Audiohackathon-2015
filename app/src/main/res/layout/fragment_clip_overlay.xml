<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="@dimen/clip_overlay_margin_horizontal"
    android:layout_marginEnd="@dimen/clip_overlay_margin_horizontal"
    android:layout_marginTop="@dimen/clip_overlay_margin_vertical"
    android:layout_marginBottom="@dimen/clip_overlay_margin_vertical"
    app:cardCornerRadius="0dp"
    app:cardElevation="8dp">

    <ImageView
        android:id="@+id/poster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/clip_overlay_height_min"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:alpha="0.08" />

    <TextView
        android:id="@+id/transcript"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/clip_overlay_text_margin_horizontal"
        android:layout_marginEnd="@dimen/clip_overlay_text_margin_horizontal"
        android:layout_marginTop="@dimen/clip_overlay_text_margin_vertical"
        android:layout_marginBottom="@dimen/clip_overlay_text_margin_vertical"
        android:layout_gravity="center_vertical"
        style="@style/TextAppearance.AppCompat.Title" />

</android.support.v7.widget.CardView>